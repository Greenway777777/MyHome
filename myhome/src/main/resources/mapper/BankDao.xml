<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.livre.myhome.dao.BankDao">
    <resultMap id="BankMapper" type="com.livre.myhome.pojo.Bank">
        <id property="id" column="id"></id>
        <result property="title" column="title"/>
        <result property="answer" column="answer"/>
        <association property="category" column="cid" select="com.livre.myhome.dao.CategoryDao.findById" javaType="com.livre.myhome.pojo.Category">
            <id property="id" column="id"></id>
            <result property="name" column="name" />
        </association>
    </resultMap>
    <select id="findAll" resultMap="BankMapper">
        select * from bank;
    </select>
</mapper>
